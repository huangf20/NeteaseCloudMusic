<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_120"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_item">

    <com.example.mymusic.widget.CustomRoundRectView
        android:id="@+id/dj_cover"
        android:layout_width="@dimen/dp_105"
        android:layout_height="@dimen/dp_105"
        app:roundRatio="0.04"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/dp_15" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/dp_12"
        android:layout_marginEnd="@dimen/dp_15"
        android:layout_toEndOf="@id/dj_cover">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="#333333"
            android:textSize="@dimen/sp_15" />

        <TextView
            android:id="@+id/tv_recm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_name"
            android:layout_marginTop="@dimen/dp_5"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/tv_dj_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_recm"
            android:layout_marginTop="@dimen/dp_3"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_dj_info"
            android:layout_marginTop="@dimen/dp_10"
            android:textColor="#ff3a3a"
            android:textSize="@dimen/sp_15"
            android:visibility="gone" />


    </RelativeLayout>
</RelativeLayout>