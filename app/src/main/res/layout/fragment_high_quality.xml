<?xml version="1.0" encoding="utf-8"?>
<com.example.mymusic.widget.PlayListRecommendScrollerView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.example.mymusic.widget.CustomPlayListPager
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/pager" />
    </RelativeLayout>
</com.example.mymusic.widget.PlayListRecommendScrollerView>